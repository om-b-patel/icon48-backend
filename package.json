{
  "name": "icon48-backend",
  "version": "1.0.0",
  "private": true,
  "description": "ICON48 - Autonomous enterprise operating system backend",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "dev": "ts-node src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "clean": "rm -rf dist node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "db:push": "npx prisma db push",
    "db:migrate": "npx prisma migrate deploy",
    "db:studio": "npx prisma studio",
    "test": "jest"
  },
  "devDependencies": {
    "@types/express": "^5.0.5",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.19.23",
    "artillery": "^2.0.26",
    "jest": "^30.2.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.1.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "turbo": "^1.11.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "@types/cors": "^2.8.19",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "posthog-node": "^5.11.0",
    "prisma": "5.22.0"
  }
}