{
  "name": "icon48-backend",
  "version": "1.0.0",
  "private": true,
  "description": "ICON48 - Autonomous enterprise operating system backend",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "start": "ts-node src/server.ts",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "db:push": "pnpm --filter @icon48/db db:push",
    "db:migrate": "pnpm --filter @icon48/db db:migrate",
    "db:studio": "pnpm --filter @icon48/db db:studio"
  },
  "devDependencies": {
    "@types/express": "^5.0.5",
    "@types/node": "^20.10.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.1.0",
    "ts-node": "^10.9.2",
    "turbo": "^1.11.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "express": "^5.1.0",
    "prisma": "5.22.0"
  }
}

