generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Metric {
  id             String   @id @default(cuid())
  name           String   @unique
  value          Float
  calculatedAt   DateTime @default(now())
  organizationId String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model Agent {
  id               String   @id @default(cuid())
  name             String
  type             String
  description      String
  confidenceScore  Float?   @default(0)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

model Workflow {
  id               String   @id @default(cuid())
  name             String   @unique
  description      String
  dateStarted      DateTime? @default(now())
  dateEvaluated    DateTime?
  expectedImpact   Float?
  actualImpact     Float?
  confidenceScore  Float?   @default(0)
  status           String   @default("pending")
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

model BetLedger {
  id               String   @id @default(cuid())
  hypothesis       String   @unique
  description      String
  dateStarted      DateTime? @default(now())
  dateEvaluated    DateTime?
  expectedImpact   Float?
  actualImpact     Float?
  confidenceScore  Float?   @default(0)
  status           String   @default("pending")
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

// ───────────────────────────────────────────────
// Profit Graph Models (Phase B4)
// ───────────────────────────────────────────────

model ProfitNode {
  id            String        @id @default(cuid())
  name          String
  category      String
  baselineValue Float          @default(0)
  currentValue  Float          @default(0)
  impactWeight  Float          @default(1)
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt

  outgoingEdges ProfitEdge[]   @relation("FromNode")
  incomingEdges ProfitEdge[]   @relation("ToNode")
}

model ProfitEdge {
  id          String     @id @default(cuid())
  fromNodeId  String
  toNodeId    String
  weight      Float      @default(1)
  rationale   String?

  fromNode    ProfitNode @relation("FromNode", fields: [fromNodeId], references: [id], onDelete: Cascade)
  toNode      ProfitNode @relation("ToNode", fields: [toNodeId], references: [id], onDelete: Cascade)
}
