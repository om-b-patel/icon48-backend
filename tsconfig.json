{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "types": ["node", "next", "next/types/global"]
  },
  "include": [
    "packages/**/*.ts",
    "packages/**/*.tsx",
    "apps/**/*.ts",
    "apps/**/*.tsx",
    "prisma/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.d.ts",
    "apps/web/.next",
    "apps/web/node_modules"
  ]
}
